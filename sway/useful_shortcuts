# core applications #
bindsym $Mod+Return       exec $term
bindsym $Mod+d            exec $dock
bindsym $Mod+e            exec $editor
bindsym $Mod+w            exec $browser
bindsym $Mod+z            exec $launcher
bindsym $Mod+f            exec $filemanager
bindsym $Mod+c            exec swaync-client -t
bindsym Mod1+l            exec nwg-lock
bindsym $Mod+m            exec waybar -b 1 -c /home/luiza/.config/waybar/Sway/config_sway_1 -s /home/luiza/.config/waybar/Sway/style_sway_1.css
bindsym $Mod+m            exec waybar -b 2 -c /home/luiza/.config/waybar/Sway/config_sway_2 -s /home/luiza/.config/waybar/Sway/style_sway_2.css

bindsym $Mod+Shift+m      exec killall waybar

# screenshot
bindsym Print exec grim - | swappy -f -
bindsym Control+Print exec screenshot display
bindsym Shift+Print exec grim -g "$(slurp)" - | swappy -f -
bindsym $Mod+Shift+Control+Print exec screenshot focused

# audio
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioMute exec pamixer -t
bindsym XF86AudioRaiseVolume exec pamixer -i 2
bindsym XF86AudioLowerVolume exec pamixer -d 2

# backlight
bindsym XF86MonBrightnessUp exec light -A 5
bindsym XF86MonBrightnessDown exec light -U 5
